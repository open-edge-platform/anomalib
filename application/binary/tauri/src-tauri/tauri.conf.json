{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Geti Inspect",
  "version": "0.1.0",
  "identifier": "com.geti.inspect",
  "build": {
    "beforeDevCommand": "cd ../../ui && npm start & mkdir -p ../src-tauri/target/debug && ln -sfn ../../../../sidecar/dist/geti-inspect-backend/_internal ../src-tauri/target/debug/_internal",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../../ui && npm run build",
    "frontendDist": "../../../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Geti Inspect",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "externalBin": [
      "../../sidecar/dist/geti-inspect-backend/geti-inspect-backend"
    ],
    "resources": ["../../sidecar/dist/geti-inspect-backend/_internal"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
